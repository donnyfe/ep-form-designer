{
	"name": "@idonnyfe/ep-form-designer",
	"description": "基于vue3和element-plus的表单设计器",
	"version": "0.0.6",
	"type": "module",
	"author": "donnyfe",
	"main": "./dist/index.umd.js",
	"module": "./dist/index.es.js",
	"files": [
		"dist",
		"playground"
	],
	"exports": {
		".": {
			"import": "./dist/index.es.js",
			"require": "./dist/index.umd.js"
		},
		"./*": "./*"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/donnyfe/ep-form-designer.git"
	},
	"keywords": [
		"form-designer",
		"element-plus",
		"Element-Plus"
	],
	"scripts": {
		"dev": "vite",
		"build": "vite build --config vite.lib.config.js",
		"preview": "vite preview",
		"deploy": "npm run build && node ./deploy/index.js",
		"format": "prettier --write src/**/*.{js,vue}"
	},
	"dependencies": {
		"ace-builds": "^1.36.3",
		"vue3-ace-editor": "^2.2.4",
		"vuedraggable": "^4.1.0",
		"wangeditor": "^4.7.15"
	},
	"devDependencies": {
		"@unocss/transformer-directives": "^0.63.6",
		"@vitejs/plugin-vue": "^5.1.4",
		"dotenv": "^16.4.5",
		"element-plus": "^2.8.7",
		"prettier": "^3.3.3",
		"sass": "^1.80.6",
		"ssh2": "^1.16.0",
		"terser": "^5.36.0",
		"unocss": "^0.63.6",
		"vite": "^5.4.10",
		"vue": "^3.5.12"
	}
}
